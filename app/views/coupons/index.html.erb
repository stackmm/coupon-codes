<%= render partial: "shared/nav" %>

<body>
  <div class="row">
    <div class="col-sm-6">
      <div class="column-header">
        <p>Active Coupons</p>
      </div>

      <ul>
        <section id="active">
          <% @merchant.active_coupons.each do |coupon| %>
            <section id="coupon-<%= coupon.id %>">
              <li><%= link_to coupon.name, "/merchants/#{@merchant.id}/coupons/#{coupon.id}" %>
              (value: <%= coupon.value %>)</li>
            </section>
          <% end %>
        </section>
      </ul>
    </div>

      <div class="col-sm-6">
        <div class="column-header">
          <p>Inactive Coupons</p>
        </div>

        <section id="disabled">
          <% @merchant.inactive_coupons.each do |coupon| %>
            <section id="coupon-<%= coupon.id %>">
              <li><%= link_to coupon.name, "/merchants/#{@merchant.id}/coupons/#{coupon.id}" %>
              (value: <%= coupon.value %>)</li>
            </section>
          <% end %>
        </section>
      </div>
    </div>
      <br><br><p><%= link_to "Create New Coupon", new_merchant_coupon_path(@merchant) %></p>
  </div>
</body>